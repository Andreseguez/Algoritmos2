#include "stdafx.h"
#include "iostream"
using namespace std;


void leerVector(int v[],int n)
{
	for(int i=0;i<n;i++)
	{
		cout<<"Elemento["<<i<<"]=";
		cin>>v[i];
	}

}

void mostrarVector(int v[],int n)
{
	for(int i=0;i<n;i++)
	{
		cout<<v[i]<<" ";
	}
	cout<<endl;
}

int mayor(int v[], int n)
{
	int may;
	may=v[0];
	for(int i=0;i<n;i++)
	{
		if(v[i]>may){
			may=v[i];
		}
	}
	return (may);
}

void invertir(int v[],int n)
{
	int i=0; int j=n-1;
	int aux;
	while(i<j)
	{
		aux=v[i];
		v[i]=v[j];
		v[j]=aux;
		i++;
		j--;
	}
}


int cantidad_rep(int v[], int n, int x)
{
	int c=0;
		for(int i=0;i<n;i++)
		{
			if (v[i]==x)
			c=c + 1;
		}
		return c;
}

void frecuencia(int v[], int n)
{
	for(int i=0;i<n;i++)
	{
		int c=cantidad_rep(v,n,v[i]);
		cout<<v[i]<<"   "<<"Cantidad: "<<c;
		cout<<endl;
	}
}

void main ()
{
	int v[50]; int n;
	cout<<"-----------VECTORES----------"<<endl;
	cout<<"Dimension del vector:";
	cin>>n;
	leerVector(v,n);
	mostrarVector(v,n);
	frecuencia(v,n);
}

